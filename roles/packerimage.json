{
    "variables": {
      "service_account_json" : "/credentials/serviceaccount.json",
      "project_id": "gcp-mentorship"
    },
    "builders": [
      {
        "type": "googlecompute",
        "project_id": "{{user `project_id`}}",
        "machine_type": "n1-standard-1",
        "source_image": "ubuntu-image",
        "region": "us-east1",
        "zone": "us-east1-b",
        "image_description": "Custom Ubuntu Machine Image",
        "image_name": "wordpress_custom_image",
        "disk_size": 20,
        "disk_type": "pd-ssd",
        "account_file": "{{ user `service_account_json`}}"
      }
    ],
    "provisioners": [
      {
        "type": "anisble",
        "playbook_file": "./playbook.yml"
      }
    ]
  }
